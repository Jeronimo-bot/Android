<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menuBackground"
    android:padding="16dp"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Game Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color Block"
            android:textColor="@color/white"
            android:textSize="72sp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="50dp" />

        <!-- "Start Game" Button -->
        <Button
            android:id="@+id/startGameButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Start Game"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:layout_marginBottom="20dp" />

        <!-- "Zen Mode" Button -->
        <Button
            android:id="@+id/zenModeButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Zen Mode"
            android:background="@color/colorSoftAccent"
            android:textColor="@color/zenModeText"
            android:textSize="36sp"
            android:layout_marginBottom="20dp" />

        <!-- "Settings" Button -->
        <Button
            android:id="@+id/settingsButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Settings"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:layout_marginBottom="20dp" />

        <!-- Removido o BotÃ£o "About" -->

        <!-- Credits -->
        <TextView
            android:id="@+id/creditsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music: Late Nights In Osaka by YellowTree\nhttps://freesound.org/s/595751/\nLicense: Attribution 4.0"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:padding="16dp" />

    </LinearLayout>
</ScrollView>
